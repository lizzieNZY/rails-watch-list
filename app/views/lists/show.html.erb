<div class="container">
  <h1><%= @list.name %></h1>

  <%= link_to "Back lists", lists_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row mt-5">
    <% @list.movies.each do |movie| %>
    <%# <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-4">
        <div class="card-category" >
          <%= movie.title %>
          <%= movie.overview %>
          <%= movie.rating %>
          <%= @bookmark.find_by(movie: movie).comment %>
          <%# <%= link_to "movies", movie_path(movie) %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
